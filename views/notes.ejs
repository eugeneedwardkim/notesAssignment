    <% include ./partials/head %>

    <div class="container">
    
        <h1>Is You Needing Reminders?</h1>
        
        <div class="row">
            <form action="/notes" method='POST'>
                <input placeholder="What's This About?" name="title" />
                <input placeholder="Tell me more about this thing" name="description" />
                <button class='btn'>Slap it On!</button>
            </form>
        </div>

        <div class="row">
           
            <% notes.forEach( function (note)  { %>
            
             <div class="col s12 m6 l4">
                <div class="card  yellow lighten-2">
                    <div class="card-content grey-text text-darken-4">
                      <span class="card-title"><%= note.title %></span>
                     <p><%= note.description %></p>
                    </div>
                    <div class="card-action">
                        <a href="/notes/<%= note.id %>" class="grey-text darken-2">View Note</a>
                    </div>
                </div>
            </div>

            <% }); %>
        </div>
    </div>

<% include ./partials/foot %>